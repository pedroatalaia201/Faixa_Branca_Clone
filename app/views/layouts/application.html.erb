<!DOCTYPE html>
<html>
  <head>
    <title>FaixaBranca</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if current_page?(root_path) %>
      <div class = "Header">
        <img class = "ImageHead" src= "https://bitbucket.org/agencia-w3case/faixabranca/raw/fc9ca933c4232d459f4a3001f624401bb6f8db56/app/assets/images/header-bg.jpg">
        <a class = "LinkLogoHead" href = <%=root_path()%>><img class = "ImageLogo" src="https://bitbucket.org/agencia-w3case/faixabranca/raw/fc9ca933c4232d459f4a3001f624401bb6f8db56/app/assets/images/logo-white.svg"></a>
      </div>
      
    <% else %>
      <div class = "Logo">
        <a class = "LinkLogo" href = <%=root_path()%>><img class = "ImageLogo" src="https://bitbucket.org/agencia-w3case/faixabranca/raw/fc9ca933c4232d459f4a3001f624401bb6f8db56/app/assets/images/logo-white.svg"></a>
      </div>
    <% end %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href= <%=root_path()%>>INÍCIO</a>
            </li>
            <li class="nav-item">
              <a class = "nav-link" href = <%=company_index_path(@company)%>>EMPRESA</a>
            </li>
            <li class = "nav-item"> 
              <a class = "nav-link" href = <%=service_index_path(@service)%>>SERVIÇOS</a>
            </li>
            <li class = "nav-item">
              <a class = "nav-link" href = <%=client_index_path(@client)%>>CLIENTES</a>
            </li>
            <li class = "nav-item">
              <a class = "nav-link" href = <%=gallery_index_path(@gallery)%>>GALERIA</a>
            </li>
            <li class = "nav-item">
              <a class = "nav-link" href = <%=speak_index_path(@speak)%>>FALE CONOSCO</a>
            </li>
            <li class = "contact">                       
              <p>(67) 3441-4905</p>
            </li>
          </ul>
         
        </div>
      </div>
    </nav>
    <%= yield %>
    
    <div class = "Footer">
      <div class = "FooterContent">
        <p>
            © 2021 - TODOS OS DIREITOS RESERVADOS.
        </p>
      </div>
    </div>

  </body>
</html>
